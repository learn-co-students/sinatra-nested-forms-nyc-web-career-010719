<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name: <%= @name %></h3><br>
  <h4>Weight: <%= @weight %> pounds</h4><br>
  <h4>Height: <%= @height %> inches</h4>
</div><br>

<h2>Ships</h2>
<% @ships.each do |ship| %>
<div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
